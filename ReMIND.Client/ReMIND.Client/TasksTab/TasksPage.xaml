             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReMIND.Client.TasksTab"
             mc:Ignorable="d">

    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="46"/>
            <ColumnDefinition Width="799"/>
            <ColumnDefinition Width="47"/>
            <ColumnDefinition Width="342"/>
            <ColumnDefinition Width="46"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="27.5"/>
            <RowDefinition Height="625"/>
            <RowDefinition Height="27.5"/>
        </Grid.RowDefinitions>

        <local:CalendarControl x:Name="Calendar" Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom"/>

        <local:ListControl x:Name="ItemsList" Grid.Row="1" Grid.Column="3" VerticalAlignment="Bottom"/>

    </Grid>
</UserControl>
