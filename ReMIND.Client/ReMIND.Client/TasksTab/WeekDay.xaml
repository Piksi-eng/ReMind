<UserControl x:Class="ReMIND.Client.TasksTab.WeekDay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReMIND.Client.TasksTab"
             mc:Ignorable="d" Foreground="#266986"
             FontFamily="Lexend Deca" FontWeight="Medium"
             d:DesignHeight="40" d:DesignWidth="114">
    
    <Border BorderThickness="0.5" BorderBrush="#C0ECECEC" Background="#DFFF">
        <TextBlock Text="{Binding Path=DisplayText}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect Opacity="0.25" Direction="270" ShadowDepth="1" BlurRadius="1"/>
            </TextBlock.Effect>
        </TextBlock>
    </Border>
</UserControl>
