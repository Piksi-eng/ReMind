<UserControl x:Class="ReMIND.Client.Elements.DropdownItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReMIND.Client.Elements"
             mc:Ignorable="d" Cursor="Hand" FontFamily="../Fonts/rbt/#Roboto"
             FontWeight="Normal" FontSize="8" Background="#266986"
             Foreground="#FFF">
    
    <TextBlock Padding="2"
               Text="{Binding Path=AttachedObject, Mode=OneWay, FallbackValue=Load_Failed}"/>
    
</UserControl>
